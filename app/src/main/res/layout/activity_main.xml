<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<TextView
    android:layout_centerHorizontal="true"
    android:layout_above="@+id/btn_scentence_builder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Michael Prins"/>
    <Button
        android:id="@+id/btn_scentence_builder"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Scentence Builder Collections"/>
    <Button
        android:layout_below="@+id/btn_scentence_builder"
        android:id="@+id/btn_scentence_builder_student"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Scentence Builder Collections"/>
</RelativeLayout>